<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Board</servlet-name>
        <servlet-class>com.jobBoard.pages.Board</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyJobs</servlet-name>
        <servlet-class>com.jobBoard.pages.MyJobs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostJob</servlet-name>
        <servlet-class>com.jobBoard.pages.PostJob</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobApplications</servlet-name>
        <servlet-class>com.jobBoard.pages.JobApplications</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyJob</servlet-name>
        <servlet-class>com.jobBoard.pages.ApplyJob</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Board</servlet-name>
        <url-pattern>/board</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyJobs</servlet-name>
        <url-pattern>/myJobs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostJob</servlet-name>
        <url-pattern>/postJob</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobApplications</servlet-name>
        <url-pattern>/jobApplications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyJob</servlet-name>
        <url-pattern>/applyJob</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>defaultHtmlEscape</param-name>
        <param-value>true</param-value>
    </context-param>
</web-app>
